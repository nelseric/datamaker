{
  "name": "macd_ewma-1d-2d_usdjpy",
  "description": "1 day, 2 day MACD only on USD_JPY",
  "database_file": "data/USDJPY.h5",
  "database_table": "ticks_ohlcv",
  "training_set_file": "training/usd_jpy_macd_train.csv",
  "validation_set_file": "training/usd_jpy_macd_validation.csv",
  "instrument": "USD_JPY",

  "features":[
    {
      "class": "noop.Feature"
    },
    {
      "class": "macd.MACD"
    },
    {
      "class": "ewma.NormalizedEWMA",
      "parameters": {
        "span": 1440
      }
    },
    {
      "class": "ewma.NormalizedEWMA",
      "parameters": {
        "span": 2880,
        "shift": 1440
      }
    }
  ],
  "classes":[
    {
      "class": "should_buy.ShouldBuy",
      "parameters": {
        "limit_upper": 0.00055,
        "limit_lower": 0.00015,
        "search_limit": 1440
      }
    }
  ]
}
